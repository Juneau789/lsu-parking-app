<!-- views/pages/admin.ejs -->
<%- include('../partials/header') %>

<div class="container mt-5">
  <h1>Admin Panel</h1>
  <form action="/api/parking-lots" method="POST">
    <div class="form-group">
      <label for="name">Lot Name</label>
      <input type="text" class="form-control" name="name" id="name" required />
    </div>
    <div class="form-group">
      <label for="day">Day</label>
      <input type="text" class="form-control" name="day" id="day" required />
    </div>
    <div class="form-group">
      <label for="availableSpots">Available Spots</label>
      <input type="number" class="form-control" name="availableSpots" id="availableSpots" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Parking Lot</button>
  </form>
</div>

<%- include('../partials/footer') %>
